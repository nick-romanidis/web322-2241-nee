<h2>Home Page</h2>

<table border="1">
    <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Occupation</th>
        <th>Company</th>
        <th></th>
    </tr>
    <% if (typeof employees !== "undefined" && employees.length > 0) { %>
        <% employees.forEach(employee => { %>
           <%- include("../partials/employee", employee) %>
        <% }); %>
    <% } else { %>
        <tr>
            <td colspan="4">There are no employees to show.</td>
        </tr>
    <% } %>
</table>